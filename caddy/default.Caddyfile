pwnthemall.local {
    handle_path /api/* {
        reverse_proxy backend:8080
    }

    # WebSocket endpoint should be proxied to backend without stripping the prefix
    @ws path /ws/*
    handle @ws {
        reverse_proxy backend:8080
    }

    handle_path /minio-api/* {
        reverse_proxy minio:9000
    }

    handle_path /minio/* {
        reverse_proxy minio:9001
    }

    handle {
        reverse_proxy frontend:3000
    }
}
